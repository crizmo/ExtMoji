{
    "manifest_version": 2,
    "name": "Emojico",
    "version": "1.0",
    "description": "Converts the Emojico website into a Firefox extension",
    "icons": {
        "149": "icons/icon.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "https://emojico.vercel.app/*"
    ],
    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}